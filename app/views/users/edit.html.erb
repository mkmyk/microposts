<h1>Edit</h1>
<div class="row">
    <div class="col-md-6 col-md-offset-3">
        <%= form_for(@user) do |f| %>

            <%= render 'shared/error_messages', object: f.object %>
            
            <%= f.label :name  %>
            <%= f.text_field :name %>
            
            <%= f.label :email %>
            <%= f.text_field :email %>
            
            <%= f.label :area %>
            <%= f.text_field :area %>
            <br>
            <br>

            <%= f.label :profile %>
            <%= f.text_field :profile %>

            <%= f.submit "Update my account", class: "btn btn-large btn-primary" %>
        <% end %>
    </div>
</div>
