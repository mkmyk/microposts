<h1>
  <%= gravatar_for @user %>
  <%= @user.name %>
</h1>

<div class="row">
    <div class="col-md-6 col-md-offset-3">
        <%= form_for(@user) do |f| %>

            <%= render 'shared/error_messages', object: f.object %>
            
            <%= f.label :name  %>
            <%= f.label :name, @user.name  %>
            <br>
            <br>
            
            <%= f.label :email %>
            <%= f.label :email, @user.email %>
            <br>
            <br>

            <%= f.label :area %>
            <%= f.label :area, @user.area %>
            <br>
            <br>

            <%= f.label :profile %>
            <%= f.label :profile, @user.profile %>
            <br>
            <br>

            <%= link_to 'edit my account', edit_user_path(@user) %>
        <% end %>
    </div>
</div>
